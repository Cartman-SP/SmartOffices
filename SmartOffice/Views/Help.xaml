<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartOffice.Views.Help"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>

        <StackLayout BackgroundColor="#1b1b1b">
            <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" Margin="25, 50, 25, 0" BackgroundColor="Transparent">
                <ImageButton Clicked="OnMain" HorizontalOptions="EndAndExpand" Padding="10" WidthRequest="42" HeightRequest="42" Source="https://ltdfoto.ru/images/2023/10/14/icon-cross.png" BorderColor="#02DDAD" BackgroundColor="Transparent" BorderWidth="2" CornerRadius="10"/>
            </StackLayout>
            <StackLayout Padding="25">
                <Label Text="Помощь" TextColor="White" FontSize="30"/>
                <Label Text="FAQ" TextColor="White" FontSize="20"/>
            </StackLayout>
            
            <Button CornerRadius="20" Margin="25, 0, 25, 10" FontSize="13" TextColor="white" Text="Как забронировать место?" BackgroundColor="#3A3A3A" HeightRequest="40" WidthRequest="365"/>
            <Button CornerRadius="20" Margin="25, 0, 25, 10" FontSize="13" TextColor="white" Text="Как войти в офис?" BackgroundColor="#3A3A3A" HeightRequest="40" WidthRequest="365"/>
            <Button CornerRadius="20" Margin="25, 0, 25, 10" FontSize="13" TextColor="white" Text="Задать свой вопрос" BackgroundColor="#3A3A3A" HeightRequest="40" WidthRequest="365"/>
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
