<?xml version="1.0" encoding="utf-8" ?>
 
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartOffice.Views.MainPage"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">

    <StackLayout HorizontalOptions="FillAndExpand">
        <StackLayout.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.3,1">
                <GradientStop Color="#1b1b1b" Offset="0.4" />
                <GradientStop Color="#112D57" Offset="0.6" />
                <GradientStop Color="#005A40" Offset="2.3" />
            </LinearGradientBrush>
        </StackLayout.Background>

        <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" Margin="25, 50, 25, 0" BackgroundColor="Transparent">
            <ImageButton HorizontalOptions="Start" Padding="10" WidthRequest="42" HeightRequest="42" Source="https://i.ibb.co/hX1tqNg/free-icon-notification-107822-2.png" BorderColor="#02DDAD" BackgroundColor="Transparent" BorderWidth="2" CornerRadius="10"/>
            <ImageButton HorizontalOptions="EndAndExpand" Padding="10" WidthRequest="42" HeightRequest="42" Source="https://i.ibb.co/brxWfQX/user-21-4.png" BorderColor="#02DDAD" BackgroundColor="Transparent" BorderWidth="2" CornerRadius="10"/>
        </StackLayout>

        <!--Приветствие-->
        <StackLayout Margin="25, 25, 25, 0">
            <Label Text="Мой офис" TextColor="#FFFFFF" FontSize="25" AbsoluteLayout.LayoutBounds="25, 90" FontAttributes="Bold"/>
            <Label Text="Добрый день, Иван!" TextColor="#FFFFFF" FontSize="18" AbsoluteLayout.LayoutBounds="25, 130"/>
        </StackLayout>

        <!--главное меню-->
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" BackgroundColor="Transparent" Margin="25, 25, 25, 0" Spacing="10">
            <StackLayout>
                <ImageButton Clicked="OnQRauth" Source="" CornerRadius="20" BackgroundColor="DarkCyan" WidthRequest="77" HeightRequest="77">
                    <ImageButton.Background>
                        <LinearGradientBrush StartPoint="0.2,0" EndPoint="0.8,1">
                            <GradientStop Color="#02FFA4" Offset="0.0" />
                            <GradientStop Color="#0016E0" Offset="1" />
                        </LinearGradientBrush>
                    </ImageButton.Background>
                </ImageButton>
                <Label Text="Вход" TextColor="#FFFFFF" FontSize="14" HorizontalTextAlignment="Center"/>
            </StackLayout>
            <StackLayout>
                <ImageButton Clicked="OnLocation" Source="" CornerRadius="20" BackgroundColor="#3A3A3A" WidthRequest="77" HeightRequest="77"/>
                <Label Text="Помещения" TextColor="#FFFFFF" FontSize="14"/>
            </StackLayout>
            <StackLayout>
                <ImageButton Clicked="OnRent" Source="" CornerRadius="20" BackgroundColor="#3A3A3A" WidthRequest="77" HeightRequest="77"/>
                <Label Text="Бронь" TextColor="#FFFFFF" HorizontalTextAlignment="Center"/>
            </StackLayout>
            <StackLayout>
                <ImageButton Clicked="OnHelp" Source="" CornerRadius="20" BackgroundColor="#3A3A3A" WidthRequest="77" HeightRequest="77"/>
                <Label Text="Помощь" TextColor="#FFFFFF" HorizontalTextAlignment="Center"/>
            </StackLayout>
        </StackLayout>

        <!--объявления шапка-->
        <StackLayout Margin="25, 25, 25, 25">
            <Label Text="Объявления" TextColor="#FFFFFF" FontSize="25" AbsoluteLayout.LayoutBounds="25, 300" FontAttributes="Bold"/>
        </StackLayout>

        <Frame CornerRadius="20" Padding="0" BackgroundColor="Transparent">
            <CarouselView x:Name="imageCarousel" WidthRequest="200" HeightRequest="281" Margin="25, 0, 25, 0">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <ImageButton Source="{Binding ImageSource}" Aspect="AspectFill" CornerRadius="20"/>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </Frame>

    </StackLayout>
</ContentPage>