                                                    <Frame.GestureRecognizers>
                                                        <TapGestureRecognizer NumberOfTapsRequired="1" />
                                                    </Frame.GestureRecognizers>
                                                </Frame>
                                                <StackLayout Orientation="Horizontal" Padding="5">
                                                    <Label Text="Protein bar" TextColor="white" FontFamily="MontserratRegular"/>
                                                    <Label Text="1$" TextColor="white" FontFamily="MontserratBold" HorizontalOptions="EndAndExpand"/>
                                                </StackLayout>
                                            </StackLayout>
                                        </Frame>
                                        <Frame Padding="0, 0, 0, 5" HasShadow="False" BackgroundColor="#191A1C" CornerRadius="20">
