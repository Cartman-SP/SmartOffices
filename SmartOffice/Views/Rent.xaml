                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>
            <ScrollView VerticalScrollBarVisibility="Default">
                <StackLayout>
                    <StackLayout>
                        <Frame CornerRadius="20" BackgroundColor="Black" HasShadow="False" Padding="20">
