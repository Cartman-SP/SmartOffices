<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartOffice.Views.Location"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>

        <StackLayout BackgroundColor="#1b1b1b">
            <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" Margin="25, 50, 25, 0" BackgroundColor="Transparent">
                <ImageButton Clicked="OnMain" HorizontalOptions="EndAndExpand" Padding="10" WidthRequest="42" HeightRequest="42" Source="https://i.ibb.co/pQKNg93/icon-cross.png" BorderColor="#02DDAD" BackgroundColor="Transparent" BorderWidth="2" CornerRadius="10"/>
            </StackLayout>
            <StackLayout Padding="25">
                <Label FontFamily="MontserratBold" Text="Помещения" TextColor="White" FontSize="30"/>
                <Label FontFamily="MontserratRegular" Text="Выберете помещение для изменения рабочей среды" TextColor="White" FontSize="20"/>
            </StackLayout>

            <Button FontFamily="MontserratRegular" Clicked="OnLight" CornerRadius="20" Margin="25, 0, 25, 10" FontSize="13" TextColor="white" Text="Кабинет 201" BackgroundColor="#3A3A3A" HeightRequest="83" WidthRequest="365"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
