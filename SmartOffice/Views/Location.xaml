<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="SmartOffice.Views.Location"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        
        <StackLayout BackgroundColor="White">
            <StackLayout>
                <yummy:PancakeView BackgroundColor="black" CornerRadius="0, 0, 20, 20">
                    <StackLayout>
                        <Grid BackgroundColor="Transparent" HorizontalOptions="Fill" Margin="20, 50, 20, 0">
                            <ImageButton Clicked="OnMain" BackgroundColor="Transparent" HorizontalOptions="Start" WidthRequest="30" Source="https://i.ibb.co/fHMY1Yx/icon-cross.png"/>
                            <Label Margin="0, 0, 0, 0" Text="Map" HorizontalOptions="CenterAndExpand" FontSize="25" VerticalTextAlignment="Center" FontFamily="MontserratBold" TextColor="white"/>
                        </Grid>
                        <StackLayout BackgroundColor="Transparent" Orientation="Horizontal" Margin="20, 25, 0, 20">
                            <StackLayout>
                                <Frame Padding="0" CornerRadius="25" WidthRequest="50" HeightRequest="50">
                                    <Image Source="https://media.dayoftheshirt.com/images/shirts/WegKz/redbubble_mike-wazowski-sulivan-face-meme-redbubble_1612841384.large.png" BackgroundColor="#191A1C" Aspect="Fill"/>
                                </Frame>
                            </StackLayout>
                            <StackLayout VerticalOptions="Center" Margin="10, 0, 0, 0">
                                <Label Text="Daniil Shirkin" FontSize="15" FontFamily="MontserratBold" TextColor="#ffffff"/>
                                <Label Text="Manager" FontSize="12" FontFamily="MontserratRegular" TextColor="#ADAFAF"/>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>
            <StackLayout>
                <Button Text="нажми меня" Clicked="Button_Clicked"/>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand" x:Name="popuplayout" IsVisible="False" TranslationY="800">
                <yummy:PancakeView CornerRadius="50, 50, 0, 0" Padding="25, 30, 25, 0" HeightRequest="500" BackgroundColor="#FFD447">
                    <StackLayout>
                        <StackLayout>
                            <Label Text="Main room" FontSize="30" VerticalTextAlignment="Center" FontFamily="MontserratBold" TextColor="White"/>
                            <BoxView HeightRequest="1" Color="#EDEDED" Margin="2"/>
                        </StackLayout>
                        <ScrollView Margin="0, 20, 0, 0" Padding="0, 0, 0, 10" VerticalOptions="StartAndExpand" VerticalScrollBarVisibility="Never">
                            <StackLayout>
                                <Frame CornerRadius="30" Padding="20" HasShadow="False">
                                    <StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Image WidthRequest="20" Source="https://inmeg.ru/wp-content/uploads/2019/07/svet.png"/>
                                            <Label Text="Xiaomi Yeelight Smart LED" FontSize="13" VerticalTextAlignment="Center" FontFamily="MontserratRegular" TextColor="#1F1F1F"/>
                                            <Switch HorizontalOptions="EndAndExpand" OnColor="#498C8A" ThumbColor="White"/>
                                        </StackLayout>
                                        <StackLayout Margin="0, 10, 0, 0">
                                            <Label Text="28 %" FontSize="15" VerticalTextAlignment="Center" FontFamily="MontserratBold" TextColor="#1F1F1F"/>
                                            <Slider ThumbColor="#FFD447" MinimumTrackColor="#FFD447" MaximumTrackColor="#FFD447"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                                <Frame CornerRadius="30" Padding="20" HasShadow="False">
                                    <StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Image WidthRequest="20" Source="https://inmeg.ru/wp-content/uploads/2019/07/svet.png"/>
                                            <Label Text="Xiaomi Yeelight Smart LED" FontSize="13" VerticalTextAlignment="Center" FontFamily="MontserratRegular" TextColor="#1F1F1F"/>
                                            <Switch HorizontalOptions="EndAndExpand" OnColor="#498C8A" ThumbColor="White"/>
                                        </StackLayout>
                                        <StackLayout Margin="0, 10, 0, 0">
                                            <Label Text="28 %" FontSize="15" VerticalTextAlignment="Center" FontFamily="MontserratBold" TextColor="#1F1F1F"/>
                                            <Slider ThumbColor="#FFD447" MinimumTrackColor="#FFD447" MaximumTrackColor="#FFD447"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                                <Frame CornerRadius="30" Padding="20" HasShadow="False">
                                    <StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Image WidthRequest="20" Source="https://inmeg.ru/wp-content/uploads/2019/07/svet.png"/>
                                            <Label Text="Xiaomi Yeelight Smart LED" FontSize="13" VerticalTextAlignment="Center" FontFamily="MontserratRegular" TextColor="#1F1F1F"/>
                                            <Switch HorizontalOptions="EndAndExpand" OnColor="#498C8A" ThumbColor="White"/>
                                        </StackLayout>
                                        <StackLayout Margin="0, 10, 0, 0">
                                            <Label Text="28 %" FontSize="15" VerticalTextAlignment="Center" FontFamily="MontserratBold" TextColor="#1F1F1F"/>
                                            <Slider ThumbColor="#FFD447" MinimumTrackColor="#FFD447" MaximumTrackColor="#FFD447"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                                <Frame CornerRadius="30" Padding="20" HasShadow="False">
                                    <StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Image WidthRequest="20" Source="https://inmeg.ru/wp-content/uploads/2019/07/svet.png"/>
                                            <Label Text="Xiaomi Yeelight Smart LED" FontSize="13" VerticalTextAlignment="Center" FontFamily="MontserratRegular" TextColor="#1F1F1F"/>
                                            <Switch HorizontalOptions="EndAndExpand" OnColor="#498C8A" ThumbColor="White"/>
                                        </StackLayout>
                                        <StackLayout Margin="0, 10, 0, 0">
                                            <Label Text="28 %" FontSize="15" VerticalTextAlignment="Center" FontFamily="MontserratBold" TextColor="#1F1F1F"/>
                                            <Slider ThumbColor="#FFD447" MinimumTrackColor="#FFD447" MaximumTrackColor="#FFD447"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                                <Frame CornerRadius="30" Padding="20" HasShadow="False">
                                    <StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Image WidthRequest="20" Source="https://inmeg.ru/wp-content/uploads/2019/07/svet.png"/>
                                            <Label Text="Xiaomi Yeelight Smart LED" FontSize="13" VerticalTextAlignment="Center" FontFamily="MontserratRegular" TextColor="#1F1F1F"/>
                                            <Switch HorizontalOptions="EndAndExpand" OnColor="#498C8A" ThumbColor="White"/>
                                        </StackLayout>
                                        <StackLayout Margin="0, 10, 0, 0">
                                            <Label Text="28 %" FontSize="15" VerticalTextAlignment="Center" FontFamily="MontserratBold" TextColor="#1F1F1F"/>
                                            <Slider ThumbColor="#FFD447" MinimumTrackColor="#FFD447" MaximumTrackColor="#FFD447"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </ScrollView>
                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
