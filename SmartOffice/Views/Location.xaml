<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="SmartOffice.Views.Location"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <StackLayout>
                    <Grid BackgroundColor="Transparent" HorizontalOptions="Fill" Margin="25, 50, 25, 0">
                        <ImageButton Clicked="OnMain" BackgroundColor="Transparent" HorizontalOptions="Start" WidthRequest="25" Source="https://cdn.onlinewebfonts.com/svg/img_439489.png"/>
                        <Label Margin="0, 0, 0, 0" Text="Map" HorizontalOptions="CenterAndExpand" FontSize="30" VerticalTextAlignment="Center" FontFamily="MontserratBold" TextColor="#1F1F1F"/>
                    </Grid>
                </StackLayout>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand">
                <yummy:PancakeView CornerRadius="50, 50, 0, 0" Padding="25, 30, 25, 0" HeightRequest="500" x:Name="DraggableContainer" BackgroundColor="LightGray">
                    <StackLayout>
                        <StackLayout>
                            <Label Text="Main room" FontSize="30" VerticalTextAlignment="Center" FontFamily="MontserratBold" TextColor="White"/>
                        </StackLayout>
                        <ScrollView Padding="0, 0, 0, 100" VerticalOptions="StartAndExpand" BackgroundColor="blue" VerticalScrollBarVisibility="Never">
                            <StackLayout>
                                <StackLayout>
                                    <Frame CornerRadius="30" HeightRequest="50">
                                        <Label Text="sample text"/>
                                    </Frame>
                                </StackLayout>
                            </StackLayout>
                        </ScrollView>
                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
