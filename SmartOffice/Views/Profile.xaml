<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartOffice.Views.Profile">
    <StackLayout>
        <Image x:Name="UserProfileImage" Source="default_profile_image.png" />
        <Button Text="Изменить изображение" Clicked="ChangeImage_Clicked" />
        <Entry Placeholder="Имя" x:Name="nameEntry" />
        <Entry Placeholder="Фамилия" x:Name="surnameEntry" />
        <Entry Placeholder="Электронная почта" x:Name="emailEntry" />
        <Entry Placeholder="Номер телефона" x:Name="phoneEntry" />
        <Button Text="Сохранить" Clicked="SaveButton_Clicked" />
    </StackLayout>
</ContentPage>
