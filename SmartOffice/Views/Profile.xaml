<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartOffice.Views.Profile"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">
    <StackLayout BackgroundColor="#1b1b1b">
        <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" Margin="25, 50, 25, 0" BackgroundColor="Transparent">
            <ImageButton Clicked="OnMain" HorizontalOptions="EndAndExpand" Padding="10" WidthRequest="42" HeightRequest="42" Source="https://ltdfoto.ru/images/2023/10/14/icon-cross.png" BorderColor="#02DDAD" BackgroundColor="Transparent" BorderWidth="2" CornerRadius="10"/>
        </StackLayout>
        <StackLayout Padding="25">
            <Label Text="Аккаунт" TextColor="White" FontSize="30"/>
            <!--<Label Text="" TextColor="White" FontSize="20"/>-->
        </StackLayout>
        <Image x:Name="UserProfileImage" Source="default_profile_image.png" />
        <Button Text="Изменить изображение" Clicked="ChangeImage_Clicked" />
        <Entry Placeholder="Имя" x:Name="nameEntry" />
        <Entry Placeholder="Фамилия" x:Name="surnameEntry" />
        <Entry Placeholder="Электронная почта" x:Name="emailEntry" />
        <Entry Placeholder="Номер телефона" x:Name="phoneEntry" />
        <Button Text="Сохранить" Clicked="SaveButton_Clicked" />
    </StackLayout>
</ContentPage>
