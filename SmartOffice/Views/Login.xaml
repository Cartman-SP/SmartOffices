<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartOffice.Views.Login"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <StackLayout BackgroundColor="black" VerticalOptions="Fill">
            <StackLayout Margin="80, 60, 60, 60" HorizontalOptions="Center" VerticalOptions="EndAndExpand">
                <Image Source="https://gas-kvas.com/uploads/posts/2023-02/1677049871_gas-kvas-com-p-risunki-na-temu-ofis-37.png"/>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand">
                <Label Text="SMART OFFICE" HorizontalOptions="Center" FontSize="30" FontFamily="MontserratBold" TextColor="white"/>
                <Label Text="Every office can be smart!" HorizontalOptions="Center" FontSize="20" FontFamily="MontserratRegular" TextColor="#ADAFAF"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0, 40, 0, 60" HorizontalOptions="Center" VerticalOptions="End">
                <Button FontFamily="MontserratRegular" FontSize="15" Text="Help" Clicked="OnMain" BackgroundColor="#2C2F34" TextColor="white" CornerRadius="20" HeightRequest="50" WidthRequest="166"/>
                <Button FontFamily="MontserratRegular" FontSize="15" Text="Login" BackgroundColor="#FE0034" TextColor="White" Clicked="OnSign" CornerRadius="20" HeightRequest="50" WidthRequest="166"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>